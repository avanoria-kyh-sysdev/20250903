<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#2C2434"
        Title="Async-Await" Height="500" Width="650">

    <Grid Margin="20 30 20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button x:Name="Btn_Download" 
                    Content="Download" 
                    Padding="10" 
                    FontSize="18"
                    Foreground="#ffffff"
                    Background="#FA1EA9"
                    BorderBrush="#FA1EA9"
                    BorderThickness="0" 
                    Click="Btn_Download_Click"
                    />
                  
            <Label Content="Event Log" 
                   Foreground="#ffffff" 
                   Margin="0 15 0 5" 
                   />
            
        </StackPanel>

        <ListView x:Name="Lv_EventLog" 
                  Grid.Row="1"
                  Background="#2C2434"
                  Foreground="#ffffff"
                  BorderBrush="#FA1EA9"
                  FontSize="15"
                  />

        <Button x:Name="Btn_Reset" 
                Grid.Row="2"
                Content="Reset"
                Foreground="#FA1EA9"
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Margin="0 10 0 0" 
                Click="Btn_Reset_Click"
                />

    </Grid>

</Window>
